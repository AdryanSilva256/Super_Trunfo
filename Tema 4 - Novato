#include <stdio.h>

int main() {
    // --- MOVIMENTAÇÃO DA TORRE (usando FOR) ---
    // A Torre move-se 5 casas para a DIREITA.
    // O 'for' é perfeito aqui pois temos um número fixo de passos.
    printf("Movimento da Torre:\n");
    for (int i = 1; i <= 5; i++) {
        printf("Direita\n");
    }
    printf("\n"); // Pula linha para organizar a saída

    // --- MOVIMENTAÇÃO DO BISPO (usando WHILE) ---
    // O Bispo move-se 5 casas na DIAGONAL (Cima e Direita).
    // Usamos o 'while' com um contador manual.
    printf("Movimento do Bispo:\n");
    int casasBispo = 1;
    while (casasBispo <= 5) {
        printf("Cima, Direita\n");
        casasBispo++; // Incremento importante para evitar loop infinito
    }
    printf("\n");

    // --- MOVIMENTAÇÃO DA RAINHA (usando DO-WHILE) ---
    // A Rainha move-se 8 casas para a ESQUERDA.
    // O 'do-while' executa o bloco primeiro e testa a condição depois.
    printf("Movimento da Rainha:\n");
    int casasRainha = 1;
    do {
        printf("Esquerda\n");
        casasRainha++;
    } while (casasRainha <= 8);
    printf("\n");

    return 0;
}
