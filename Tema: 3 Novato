#include <stdio.h>

int main() {
    // --- VARIÁVEIS CARTA 1 ---
    char estado1[20] = "São Paulo";
    char codigo1[4] = "A01";
    char nome1[50] = "São Paulo";
    unsigned long int pop1 = 12325000;
    float area1 = 1521.11, pib1 = 699.28;
    int pontos1 = 50;

    // --- VARIÁVEIS CARTA 2 ---
    char estado2[20] = "Rio de Janeiro";
    char codigo2[4] = "B02";
    char nome2[50] = "Rio de Janeiro";
    unsigned long int pop2 = 6748000;
    float area2 = 1200.25, pib2 = 300.50;
    int pontos2 = 30;

    // --- CÁLCULOS  ---
    float densidade1 = (float)pop1 / area1;
    float pibCapita1 = (pib1 * 1000000000) / pop1;

    float densidade2 = (float)pop2 / area2;
    float pibCapita2 = (pib2 * 1000000000) / pop2;

    // --- LÓGICA DE COMPARAÇÃO (ATRIBUTO: POPULAÇÃO) ---
    printf("=== Batalha de Cartas (Atributo: População) ===\n\n");
    printf("Carta 1 - %s (%s): %lu habitantes\n", nome1, estado1, pop1);
    printf("Carta 2 - %s (%s): %lu habitantes\n", nome2, estado2, pop2);
    printf("-----------------------------------------------\n");

    // Aqui o programa decide quem vence
    if (pop1 > pop2) {
        printf("Resultado: Carta 1 (%s) venceu!\n", nome1);
    } else if (pop2 > pop1) {
        printf("Resultado: Carta 2 (%s) venceu!\n", nome2);
    } else {
        printf("Resultado: Empate!\n");
    }

    return 0;
}
