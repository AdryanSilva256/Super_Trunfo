#include <stdio.h>

// --- FUNÇÕES RECURSIVAS ---

void moverTorre(int casas) {
    if (casas > 0) {
        printf("Direita\n");
        moverTorre(casas - 1);
    }
}

void moverRainha(int casas) {
    if (casas > 0) {
        printf("Esquerda\n");
        moverRainha(casas - 1);
    }
}

void moverBispoRecursivo(int casas) {
    if (casas > 0) {
        printf("Cima, Direita\n");
        moverBispoRecursivo(casas - 1);
    }
}

int main() {
    printf("Movimento da Torre (5 casas):\n");
    moverTorre(5);
    printf("\n");

    printf("Movimento do Bispo (5 casas na diagonal):\n");
    // O requisito pede loop externo vertical e interno horizontal
    for (int i = 1; i <= 5; i++) {
        printf("Cima, ");
        for (int j = 1; j <= 1; j++) {
            printf("Direita\n");
        }
    }
    printf("\n");

    printf("Movimento da Rainha (8 casas):\n");
    moverRainha(8);
    printf("\n");

    printf("Movimento do Cavalo (2 Cima, 1 Direita):\n");
    
    for (int i = 1, j = 1; i <= 3; i++) {

        if (i <= 2) {
            printf("Cima\n");
            continue; 
        }
        
        while (j <= 1) {
            printf("Direita\n");
            j++;
            break; 
        }
    }
    printf("\n");

    return 0;
}
