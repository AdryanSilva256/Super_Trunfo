#include <stdio.h>

int main() {
    // --- DADOS DAS CARTAS (Pré-cadastrados para o exemplo) ---
    char nome1[50] = "Brasil", nome2[50] = "Argentina";
    unsigned long int pop1 = 214300000, pop2 = 45800000;
    float area1 = 8515767.0, area2 = 2780400.0;
    float pib1 = 1.61, pib2 = 0.49; 
    int pontos1 = 80, pontos2 = 45;
    float densidade1 = (float)pop1 / area1;
    float densidade2 = (float)pop2 / area2;

    int opcao;

    // --- MENU INTERATIVO ---
    printf("Escolha o atributo para a batalha:\n");
    printf("1 - População\n");
    printf("2 - Área\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Turísticos\n");
    printf("5 - Densidade Demográfica\n");
    printf("Opção: ");
    scanf("%d", &opcao);

    printf("\n--- RESULTADO DA BATALHA ---\n");

    // --- LÓGICA DE COMPARAÇÃO COM SWITCH E IF-ELSE ---
    switch (opcao) {
        case 1: // População (Maior vence)
            printf("Atributo: População\n");
            printf("%s: %lu vs %s: %lu\n", nome1, pop1, nome2, pop2);
            if (pop1 > pop2) {
                printf("Vencedor: %s!\n", nome1);
            } else if (pop2 > pop1) {
                printf("Vencedor: %s!\n", nome2);
            } else {
                printf("Empate!\n");
            }
            break;

        case 2: // Área (Maior vence)
            printf("Atributo: Área\n");
            printf("%s: %.2f vs %s: %.2f\n", nome1, area1, nome2, area2);
            if (area1 > area2) {
                printf("Vencedor: %s!\n", nome1);
            } else if (area2 > area1) {
                printf("Vencedor: %s!\n", nome2);
            } else {
                printf("Empate!\n");
            }
            break;

        case 3: // PIB (Maior vence)
            printf("Atributo: PIB\n");
            printf("%s: %.2f vs %s: %.2f\n", nome1, pib1, nome2, pib2);
            if (pib1 > pib2) {
                printf("Vencedor: %s!\n", nome1);
            } else if (pib2 > pib1) {
                printf("Vencedor: %s!\n", nome2);
            } else {
                printf("Empate!\n");
            }
            break;

        case 4: // Pontos Turísticos (Maior vence)
            printf("Atributo: Pontos Turísticos\n");
            printf("%s: %d vs %s: %d\n", nome1, pontos1, nome2, pontos2);
            if (pontos1 > pontos2) {
                printf("Vencedor: %s!\n", nome1);
            } else if (pontos2 > pontos1) {
                printf("Vencedor: %s!\n", nome2);
            } else {
                printf("Empate!\n");
            }
            break;

        case 5: // Densidade Demográfica (MENOR vence)
            printf("Atributo: Densidade Demográfica\n");
            printf("%s: %.2f hab/km² vs %s: %.2f hab/km²\n", nome1, densidade1, nome2, densidade2);
            // Lógica invertida para Densidade
            if (densidade1 < densidade2) {
                printf("Vencedor: %s!\n", nome1);
            } else if (densidade2 < densidade1) {
                printf("Vencedor: %s!\n", nome2);
            } else {
                printf("Empate!\n");
            }
            break;

        default: // Tratamento de entrada inválida
            printf("Opção inválida! Escolha um número de 1 a 5.\n");
            break;
    }

    return 0;
}
